@page
@model IndexModel

<style>
    .custom-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .custom-table th, .custom-table td {
            border: 1px solid black;
            padding: 8px 12px;
            text-align: center;
        }

        .custom-table th {
            background-color: #f2f2f2;
        }

    .btn-action {
        display: inline-block;
        margin: 0 5px;
        padding: 5px 10px;
        border: 1px solid #333;
        background-color: white;
        cursor: pointer;
    }

        .btn-action:hover {
            background-color: #ddd;
        }

    .btn-add {
        display: block;
        width: 100%;
        margin: 20px auto;
        padding: 10px;
        text-align: center;
        font-size: 16px;
        border: 1px solid black;
        background-color: white;
        cursor: pointer;
    }

    h1 {
        margin-top: 30px;
    }
</style>

<form method="get" asp-page="/Students/Create">
    <button type="submit" class="btn-add">Thêm Học Sinh</button>
</form>

<h1><strong>Danh Sách Học Sinh</strong></h1>

<table class="custom-table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên Học Sinh</th>
            <th>Lớp Học</th>
            <th>Ngày Sinh</th>
            <th>Giới Tính</th>
            <th>Địa Chỉ</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Students != null)
        {

            foreach (var hs in Model.Students)
            {
                <tr>
                    <td>@hs.iMaHS</td>
                    <td>@hs.sHoTen</td>
                    <td>@hs.iMaLop</td>
                    <td>@hs.dNgaySinh.ToString("dd/MM/yyyy")</td>
                    <td>@(hs.bGioiTinh ? "Nam" : "Nữ")</td>
                    <td>@hs.sDiaChi</td>
                    <td>
                        <form method="get" asp-page="/Students/Edit" asp-route-id="@hs.iMaHS" style="display:inline;">
                            <button type="submit" class="btn-action">Chỉnh sửa</button>
                        </form>
                        <form method="post" asp-page-handler="Delete" asp-route-id="@hs.iMaHS" style="display:inline;"
                              onsubmit="return confirm('Bạn có chắc muốn xóa học sinh này không?');">
                            <button type="submit" class="btn-action">Xóa</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7">Không có học sinh nào.</td>
            </tr>
        }
    </tbody>
</table>
