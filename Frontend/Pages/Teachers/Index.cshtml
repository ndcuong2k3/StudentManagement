@page
@model IndexModel

<style>
    .custom-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .custom-table th, .custom-table td {
            border: 1px solid black;
            padding: 8px 12px;
            text-align: center;
        }

        .custom-table th {
            background-color: #f2f2f2;
        }

    .btn-action {
        display: inline-block;
        margin: 0 5px;
        padding: 5px 10px;
        border: 1px solid #333;
        background-color: white;
        cursor: pointer;
    }

        .btn-action:hover {
            background-color: #ddd;
        }

    .btn-add {
        display: block;
        width: 100%;
        margin: 20px auto;
        padding: 10px;
        text-align: center;
        font-size: 16px;
        border: 1px solid black;
        background-color: white;
        cursor: pointer;
    }

    h1 {
        margin-top: 30px;
    }
</style>

<form method="get" asp-page="/Teachers/Create" asp-route-iMaGV="aaa">
    <button type="submit" class="btn-add">Thêm Giáo Viên</button>
</form>

<h1><strong>Danh Sách Giáo Viên</strong></h1>

<table class="custom-table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên Giáo Viên</th>
            <th>Chuyên Môn</th>
            <th>Địa Chỉ</th>
            <th>Số Điện Thoại</th>
            <th>Email</th>
            <th>Hành Động</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Teachers != null)
        {
            foreach (var gv in Model.Teachers)
            {
                <tr>
                    <td>@gv.iMaGV</td>
                    <td>@gv.sHoTen</td>
                    <td>@gv.sChuyenMon</td>
                    <td>@gv.sDiaChi</td>
                    <td>@gv.sSoDienThoai</td>
                    <td>@gv.sEmail</td>
                    <td>
                        <form method="get" asp-page="/Teachers/Update" asp-route-id="@gv.iMaGV" style="display:inline;">
                            <button type="submit" class="btn-action">Chỉnh sửa</button>
                        </form>

                        <form method="post" asp-page-handler="Delete" asp-route-id="@gv.iMaGV" style="display:inline;"
                              onsubmit="return confirm('Bạn có chắc muốn xóa giáo viên này không?');">
                            <button type="submit" class="btn-action">Xóa</button>
                        </form>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7">Không có giáo viên nào.</td>
            </tr>
        }
    </tbody>
</table>
